generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  orders  Order[]  // Um customer pode ter v√°rias orders
}

model Order {
  id          Int      @id @default(autoincrement())
  orderDate   DateTime @default(now())
  totalAmount Float
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)  // relacionamento FOREIGN KEY do "tipo" Customer
  customerId  Int      // Chave estrangeira
}